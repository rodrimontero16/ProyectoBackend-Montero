<div>
    <h2 >Usuarios</h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Email</th>
                    <th scope="col">Role</th>
                    <th scope="col">Eliminar/Editar</th>
                </tr>
            </thead>
            <tbody id="tableCarts">
                {{#each users}}
                    <tr data-product-id="{{userID}}">
                        <th scope="row">{{userID}}</th>
                        <td>{{userName}}</td>
                        <td>{{userEmail}}</td>
                        <td>{{userRole}}</td>
                        <td>
                            <button id="{{userID}}">❌</button>
                            <a href="/api/carts/{{userID}}">
                                <button id="{{userID}}">🖋️</button>
                            </a>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
</div>